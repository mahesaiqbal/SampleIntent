<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mahesaiqbal.sampleintent.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_activity_sub_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ke Activity Sub 1"
        android:layout_marginBottom="8dp"/>
    <EditText
        android:id="@+id/text_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berpindah ke activity lain dengan membawa data"/>
    <Button
        android:id="@+id/btn_activity_sub_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ke Activity Sub 2"
        android:layout_marginBottom="8dp"/>
    <Button
        android:id="@+id/btn_activity_dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ke Activity Dial"
        android:layout_marginBottom="8dp"/>
    <Button
        android:id="@+id/btn_web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Artikel Android WebView"
        android:layout_marginBottom="8dp"/>
    <Button
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:layout_marginBottom="8dp"/>
    <Button
        android:id="@+id/btn_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peta UBL Salemba"/>

</LinearLayout>
